# Frontend Environment Variables Example
# Copy this to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3333
NEXT_PUBLIC_API_BASE_URL=http://localhost:3333/api

# Payment Configuration (Public)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Exchange APIs (Read-only for frontend)
NEXT_PUBLIC_BINANCE_API_KEY=your_binance_api_key_here
NEXT_PUBLIC_BYBIT_API_KEY=your_bybit_api_key_here

# Market Data
NEXT_PUBLIC_COINSTATS_API_KEY=your_coinstats_api_key_here
NEXT_PUBLIC_FEAR_GREED_INDEX_URL=https://api.alternative.me/fng/

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3333

# Development
NEXT_PUBLIC_ENV=development